> function myFunc(x){
	switch(x){
	case 1:			// se usar console.log tem que usar o break depois.
	return 'x é 1';
	break;
	case 2:
	return 'x é 2';
	break;
	default:
	return 'x não é nem 1 nem 2';
	}
}

